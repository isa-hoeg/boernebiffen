---
// Henter parametrene fra Astro.props
const { variant = "primary", size = "medium", icon = null, iconHover = null } = Astro.props; 
 
//Definer den styling (Tailwind classes, der gør sig gældende for alle knapper)
const buttonStyling = "flex items-center gap-2 m-2";
 
//Definer den styling (Tailwind classes), der gør sig gældende for de forskellige varianter 
const variantClasses = {
"primary": " px-10 py-4 bg-secondary text-bg font-display rounded-4xl hover:bg-hover cursor-pointer", /* border-primary-500 */
"like": "px-4 py-1 bg-secondary text-bg font-display rounded-4xl cursor-pointer rounded-sm lg:rounded-lg" /* border-secondary-500 */
};
 
//Definer den styling (Tailwind classes), der gør sig gældende for de forskelligeog størrelser.
const sizeClasses = {
"large": "text-4xl",
"medium": "text-xl",
"small": "text-lg",
"xsmall": "text-sm"
};

//Definer ikonstørrelse baseret på knappens størrelse
const iconSizeClasses = {
"medium": "w-6 h-6",
"small": "w-5 h-5",
"xsmall": "w-4 h-4"
};

const iconSize = iconSizeClasses[size];
---
<!--Sæt classes for den pågældende knap sammen ved hjælp af Astros class:list -->
<button class:list={[buttonStyling, variantClasses[variant], sizeClasses[size], "group"]}>
  <slot />
  {icon && (
    <>
      <img src={icon} alt="icon" class:list={[iconSize, "icon-default group-hover:hidden"]} />
      {iconHover && <img src={iconHover} alt="icon hover" class:list={[iconSize, "icon-hover hidden group-hover:block"]} />}
    </>
  )}
</button>