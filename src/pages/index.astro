		<Heading htmlheading="h1">Lav noget flot!</Heading>
        <Text teksttype="brødtekst">Så bliver Anders glad:-)</Text>
		<Card 
			cardimage="/lillefroe.webp"
			cardimagealt="Thumbs up image"
			cardtitle="Den lille frø"
			cardcategory1="Musik"
			cardcategory2="Fakta"
			cardtime="20 min"
			variant="musik"
			vairant=""
