---
import MainLayout from "../layouts/MainLayout.astro";
import Link from "../components/Link.astro";
import { Image } from "astro:assets";
import thumbsup from "../assets/images/thumbsup.png";
import Heading from "../components/Heading.astro";
import Text from "../components/Text.astro";
import Button from "../components/Button.astro";
import Card from "../components/Card.astro";
---
<MainLayout title="Listeview">
<!-- start på hero -->
 <section class="grid grid-cols-12 grid-rows-1">
  <!-- talebobbel -->
  <img src="/tale_bobbel.svg" class="col-start-1 col-end-8 row-start-1 mt-10 md:col-start-3 md:col-end-8 md:mt-10 z-0"/>

  <!-- figur -->
  <img src="/hero_listogsingle.svg" class="col-start-7 col-end-12 row-start-1 mt-10 md:col-start-7 md:col-end-10 md:mt-20 z-0"/>

  <!-- TEKST, som skal ovenpå boblen -->
  <Heading htmlheading="h3" font="display" size="small" stylingclasses="text-secondary col-start-2 col-end-7 mr-3 md:col-start-4 row-start-1 mt-24 md:mt-45 z-20">Hej Fiona! Hyggeligt<br>du er tilbage!</Heading>
</section>
<!-- slut på hero -->

<!-- start på "fortsæt med" -->
<section class="mx-auto max-w-7xl px-4 md:px-0">
