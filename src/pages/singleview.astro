	<!-- SKY MED TEKST -->
<section class="relative py-20 px-4 flex justify-start items-end min-h-[300px]">
  <!-- Sky SVG i sin oprindelige form, ingen bg-cover -->
  <img src="/sky1.svg" alt="Sky" class="w-auto h-40 md:h-64 lg:h-80" />

  <div class="absolute left-0 bottom-0 w-full max-w-4xl mx-auto p-4 flex flex-col gap-6 z-10">
    <!-- Overskrift -->
    <Heading 
      htmlheading="h1" 
      size="small" 
      font="display" 
      stylingclasses="text-secondary"
    >
      Lillefinger – Den skæve kasse
    </Heading>

    <!-- Knapper + tid/favorit -->
    <div class="flex justify-between items-center w-full">
      <div class="flex gap-4">
        <button class="px-4 py-2 bg-primary text-white rounded-md">
          Knap 1
        </button>
        <button class="px-4 py-2 bg-secondary text-white rounded-md">
          Knap 2
        </button>
      </div>
      <div class="flex items-center gap-4">
        <p class="text-secondary text-xl font-serif">
          1t 45m
        </p>
        <button>
          <img src="/icons/heart.svg" alt="Favorit" class="w-7 h-7" />
        </button>
      </div>
    </div>

    <!-- Brødtekst -->
    <Text teksttype="brødtekst">
      Her kommer din beskrivelse. Den kan være lang eller kort, og stylingen kommer fra din Text-komponent.
    </Text>
  </div>
