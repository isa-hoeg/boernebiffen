---
import MainLayout from "../layouts/MainLayout.astro";

import Heading from "../components/Heading.astro";
import Text from "../components/Text.astro";
import Button from "../components/Button.astro";
import Headerlistsingle from "../components/Headerlistsingle.astro";
---
<MainLayout title="Singleview">
	<main class="container mx-auto p-4">

        <Headerlistsingle />    
   
		<!-- Video- og skysection -->
		  <section class="w-full min-h-screen relative overflow-visible pt-32 md:pt-40">
  <!-- SKY-LAYER: absolute grid, fylder hele sektionen -->
  <div class="absolute inset-0 w-full h-full grid grid-cols-12 grid-rows-8 z-0 pointer-events-none">
    <img src="/sky1.svg" alt="" class="col-start-1 col-end-6 row-start-1 row-end-4 w-full h-full object-contain" />
    <img src="/sky2.svg" alt="" class="col-start-4 col-end-9 row-start-1 row-end-5 w-full h-full object-contain" />
    <img src="/sky3.svg" alt="" class="col-start-8 col-end-13 row-start-2 row-end-6 w-full h-full object-contain" />
    <img src="/sky4.svg" alt="" class="col-start-2 col-end-7 row-start-4 row-end-8 w-full h-full object-contain" />
    <img src="/sky5.svg" alt="" class="col-start-6 col-end-12 row-start-5 row-end-9 w-full h-full object-contain" />
  </div>

  <!-- VIDEO-LAYER: relativ grid, ligger over skyerne -->
  <div class="relative z-10 grid grid-cols-12 grid-rows-8 h-full">
    <div class="col-start-2 col-end-12 md:col-start-3 md:col-end-11 row-start-3 row-end-7 flex items-center justify-center px-4">
      <div class="w-full max-w-4xl aspect-video bg-black rounded-xl overflow-hidden shadow-lg">
        <video src="/video.mp4" controls class="w-full h-full object-cover"></video>
      </div>
    </div>
  </div>
</section>

	</main>
</MainLayout>